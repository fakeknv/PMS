<?xml version="1.0" encoding="utf-8"?>
<UserControl
	x:Class="PRMS.UIComponents.NotificationItem" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
	Height="122"
	Margin="15,15,15,15">
	<Grid>
		<Border
			BorderThickness="1"
			CornerRadius="0,0,10,10"
			BorderBrush="Black"
			Background="#FF278DF4">
			<Label
				Width="130"
				Height="120"
				Content="{Binding Content}"
				x:Name="NotifContentHolder" />
		</Border>
	</Grid>
</UserControl>