                        <Label Content="Burial" HorizontalAlignment="Left" Margin="38,150,0,0" VerticalAlignment="Top" Width="211" FontFamily="/PMS;component/Assets/Fonts/#Roboto" FontSize="14"/>
                        <mah:NumericUpDown x:Name="BurialPrintFee" HorizontalAlignment="Left" Margin="254,151,0,0" VerticalAlignment="Top" Width="148"/>
                        <Label Content="Matrimonial" HorizontalAlignment="Left" Margin="38,190,0,0" VerticalAlignment="Top" Width="211" FontFamily="/PMS;component/Assets/Fonts/#Roboto" FontSize="14"/>
