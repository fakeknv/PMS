            <TabItem Header="Accounts" FontFamily="/PMS;component/Assets/Fonts/#Roboto Thin">
                <Grid>
                    <ListView x:Name="AccountsListHolder" Margin="0,78,0,0" BorderThickness="0">
                        <ListView.ItemContainerStyle>
                            <Style TargetType="{x:Type ListViewItem}">
                                <Setter Property="Padding" Value="0,0,0,0"/>
                                <Setter Property="Width" Value="Auto"/>
                                <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                            </Style>
                        </ListView.ItemContainerStyle>
                    </ListView>
                    <Button
                        x:Name="CreateRequestButton" 
                        Margin="0,7,10,0" 
                        VerticalAlignment="Top" 
                        Width="135" 
                        Height="31" 
                        Background="#FF3C7AC9" 
                        FontFamily="/PMS;component/Assets/Fonts/#Roboto" 
                        Foreground="White" 
                        HorizontalAlignment="Right">
                        <StackPanel 
                            Orientation="Horizontal">
                            <Rectangle 
                                Width="16"
                                Height="16">
                                <Rectangle.Fill>
                                    <VisualBrush 
                                        Stretch="Fill"
                                        Visual="{iconPacks:FontAwesome UserPlusSolid}" />
                                </Rectangle.Fill>
                            </Rectangle>
                            <TextBlock 
                                Text="  Add Account" 
                                FontFamily="/PMS;component/Assets/Fonts/#Roboto" />
                        </StackPanel>
                    </Button>
                    <Label Content="Username" BorderThickness="1,1,0,1" HorizontalAlignment="Left" Margin="0,52,0,0" VerticalAlignment="Top" Width="230" HorizontalContentAlignment="Center" BorderBrush="#FFE6E6E6" FontFamily="/PMS;component/Assets/Fonts/#Roboto"/>
