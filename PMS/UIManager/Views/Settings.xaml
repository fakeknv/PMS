                        <Label Content="Thanksgiving Mass" HorizontalAlignment="Left" Margin="38,283,0,0" VerticalAlignment="Top" Width="211" FontFamily="/PMS;component/Assets/Fonts/#Roboto" FontSize="14"/>
                        <mah:NumericUpDown x:Name="Thanksgiving" HorizontalAlignment="Left" Margin="254,284,0,0" VerticalAlignment="Top" Width="148"/>
                        <Label Content="Petition Mass" HorizontalAlignment="Left" Margin="38,323,0,0" VerticalAlignment="Top" Width="211" FontFamily="/PMS;component/Assets/Fonts/#Roboto" FontSize="14"/>
                        <mah:NumericUpDown x:Name="PetitionMass" HorizontalAlignment="Left" Margin="254,324,0,0" VerticalAlignment="Top" Width="148"/>
                        <Label Content="Special Intention Mass" HorizontalAlignment="Left" Margin="38,364,0,0" VerticalAlignment="Top" Width="211" FontFamily="/PMS;component/Assets/Fonts/#Roboto" FontSize="14"/>
                        <mah:NumericUpDown x:Name="SpecialIntentionMass" HorizontalAlignment="Left" Margin="254,365,0,0" VerticalAlignment="Top" Width="148"/>
                        <Label Content="All Souls" HorizontalAlignment="Left" Margin="38,403,0,0" VerticalAlignment="Top" Width="211" FontFamily="/PMS;component/Assets/Fonts/#Roboto" FontSize="14"/>
                        <mah:NumericUpDown x:Name="AllSouls" HorizontalAlignment="Left" Margin="254,404,0,0" VerticalAlignment="Top" Width="148"/>
