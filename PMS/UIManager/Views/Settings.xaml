                        <Label Content="Baptismal Stipend" HorizontalAlignment="Left" Margin="527,66,0,0" VerticalAlignment="Top" Width="211" FontFamily="/PMS;component/Assets/Fonts/#Roboto" FontSize="14"/>
                        <mah:NumericUpDown x:Name="BaptismalStipend" HorizontalAlignment="Left" Margin="743,67,0,0" VerticalAlignment="Top" Width="148"/>
                        <Label Content="Confirmation Stipend" HorizontalAlignment="Left" Margin="527,108,0,0" VerticalAlignment="Top" Width="211" FontFamily="/PMS;component/Assets/Fonts/#Roboto" FontSize="14"/>
                        <mah:NumericUpDown x:Name="ConfirmationStipend" HorizontalAlignment="Left" Margin="743,109,0,0" VerticalAlignment="Top" Width="148"/>
                        <Label Content="Matrimonial Stipend" HorizontalAlignment="Left" Margin="527,150,0,0" VerticalAlignment="Top" Width="211" FontFamily="/PMS;component/Assets/Fonts/#Roboto" FontSize="14"/>
                        <mah:NumericUpDown x:Name="MatrimonialStipend" HorizontalAlignment="Left" Margin="743,151,0,0" VerticalAlignment="Top" Width="148"/>
                        <Label Content="Burial Stipend" HorizontalAlignment="Left" Margin="527,190,0,0" VerticalAlignment="Top" Width="211" FontFamily="/PMS;component/Assets/Fonts/#Roboto" FontSize="14"/>
                        <mah:NumericUpDown x:Name="BurialStipend" HorizontalAlignment="Left" Margin="743,191,0,0" VerticalAlignment="Top" Width="148"/>
                        <Button Content="Reset" Margin="774,536,0,0" Background="#FFF0A63A" Foreground="White" Height="30" VerticalAlignment="Top" HorizontalAlignment="Left" Width="117" Click="ResetButton_Click"/>
                        <Button Content="Save Changes" Margin="652,536,0,0" Background="#FF3C7AC9" Foreground="White" Height="30" VerticalAlignment="Top" HorizontalAlignment="Left" Width="117" Click="SaveButton_Click"/>
                    </Grid>
                </ScrollViewer>
            </TabItem>
            <TabItem Header="Residing Priests" FontFamily="/PMS;component/Assets/Fonts/#Roboto Thin">
                <Grid/>
            </TabItem>
            <mah:NumericUpDown Height="100" Width="100"/>
        </mah:MetroAnimatedTabControl>
        <Grid Height="88" Margin="7,51,7,0" VerticalAlignment="Top">
            <Grid.Background>
                <ImageBrush ImageSource="/PMS;component/Assets/pexels-photo-458918.jpeg" Stretch="UniformToFill"/>
            </Grid.Background>
            <Label Content="Control Panel" HorizontalAlignment="Left" Margin="31,29,0,0" VerticalAlignment="Top" FontFamily="/PMS;component/Assets/Fonts/#Roboto" Width="221" FontSize="18" Height="24" Padding="5,0" Foreground="White"/>
            <Label Content="Welcome Administrator" HorizontalAlignment="Left" Margin="31,53,0,0" VerticalAlignment="Top" Width="221" FontFamily="/PMS;component/Assets/Fonts/#Roboto Thin" Padding="5,0" Foreground="White"/>
        </Grid>
    </Grid>
</UserControl>