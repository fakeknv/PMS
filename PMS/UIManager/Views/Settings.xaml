                    <Label Content="Name" BorderThickness="1,1,0,1" HorizontalAlignment="Left" Margin="450,52,0,0" VerticalAlignment="Top" Width="252" HorizontalContentAlignment="Center" BorderBrush="#FFE6E6E6" FontFamily="/PMS;component/Assets/Fonts/#Roboto"/>
                    <Label Content="Actions" BorderThickness="1,1,1,1" Margin="702,52,0,0" VerticalAlignment="Top" HorizontalContentAlignment="Center" BorderBrush="#FFE6E6E6" FontFamily="/PMS;component/Assets/Fonts/#Roboto"/>

                </Grid>
            </TabItem>
            <TabItem Header="Billing" FontFamily="/PMS;component/Assets/Fonts/#Roboto Thin">
                <ScrollViewer>
                    <Grid Height="585">
                        <Label BorderBrush="#E9ECEF" BorderThickness="0,0,0,1" Content="CERTIFICATE PRINTING FEES" Margin="24,23,517,0" FontFamily="/PMS;component/Assets/Fonts/#Roboto Thin" FontSize="14" Height="28" VerticalAlignment="Top"/>
