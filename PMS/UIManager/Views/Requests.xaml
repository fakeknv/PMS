<?xml version="1.0" encoding="utf-8"?>
<UserControl 
    xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:SimpleChildWindow="clr-namespace:MahApps.Metro.SimpleChildWindow;assembly=MahApps.Metro.SimpleChildWindow"
	xmlns:UIComponents="clr-namespace:PMS.UIComponents"
    xmlns:system="clr-namespace:System;assembly=mscorlib"
    x:Class="PMS.UIManager.Views.Requests"
    Margin="0" 
    Padding="0">
    <Grid 
        x:Name="RequestMainGrid" 
        Margin="0,-17,0,0"
        Background="#D9D9DE">
        <Grid 
            x:Name="RequestTopBarGrid" 
            HorizontalAlignment="Stretch" 
            Margin="0"
            Background="White">
            <TextBox x:Name="SearchRequestBox" 
                TextWrapping="Wrap" 
                Margin="10,7,261,0"
                BorderThickness="0,0,0,1" 
                FontSize="16" 
                Height="35" 
                HorizontalAlignment="Stretch" 
                VerticalAlignment="Top" 
                mah:TextBoxHelper.Watermark="Search"
                RenderTransformOrigin="0,0.5"/>
            <Button x:Name="SearchRequestButton" 
                Style="{DynamicResource MetroCircleButtonStyle}" 
                Content="{iconPacks:FontAwesome SearchSolid}" 
                Margin="0,7,261,0" 
                VerticalAlignment="Top" 
                Height="34" 
                Background="White" 
                BorderBrush="{x:Null}" 
                RenderTransformOrigin="0.824,0.294" HorizontalAlignment="Right" Width="34"/>
            <mah:DropDownButton x:Name="FilterRequestButton" 
                HorizontalAlignment="Right" 
                Height="34" 
                Margin="0,7,127,0" 
                VerticalAlignment="Top" 
                Width="128" 
                Content="Filter"
                BorderBrush="{x:Null}"/>
            <Button x:Name="CreateRequestButton"  
                HorizontalAlignment="Right" 
                Margin="0,7,15,0" 
                VerticalAlignment="Top" 
                Width="107" 
                Height="34" Background="{x:Null}" Click="CreateRequestButton_Click">
                <StackPanel Orientation="Horizontal">
                    <Rectangle Width="16"
                        Height="16">
                        <Rectangle.Fill>
                            <VisualBrush Stretch="Fill"
                                Visual="{iconPacks:FontAwesome PlusSquareRegular}" />
                        </Rectangle.Fill>
                    </Rectangle>
                    <TextBlock Text="  Request" />
                </StackPanel>
            </Button>
        </Grid>
        <DockPanel Margin="0,49,0,0" Background="#d9d9df">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <ItemsControl>
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Columns="3" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Grid 
                            Background="#1568a8" 
                            Margin="10,10,10,10"
                            Height="163.652"
                            Width="271.936">
                            <iconPacks:PackIconFontAwesome 
                                Kind="UserCircleSolid"
                                HorizontalAlignment="Left" 
                                Margin="51,60,0,0" 
                                VerticalAlignment="Top" 
                                Height="43" 
                                Width="46" 
                                Foreground="White"/>
                                <Label 
                                    Content="Baptismal Certificate"
                                    HorizontalAlignment="Left" 
                                    Margin="10,10,0,0" 
                                    VerticalAlignment="Top" 
                                    Width="140" 
                                    Height="25" 
                                    FontSize="14" 
                                    FontFamily="/PMS;component/Assets/Fonts/#Roboto" 
                                    Foreground="White"/>
                                <Label 
                                    Content="{Binding}" 
                                    HorizontalAlignment="Left" 
                                    Margin="96,66,0,0" 
                                    VerticalAlignment="Top" 
                                    Height="34" 
                                    Width="149" 
                                    FontFamily="/PMS;component/Assets/Fonts/#Roboto" 
                                    FontSize="18" Foreground="White"/>
                                <Grid 
                                    Height="41" 
                                    Margin="0,123,0,0" 
                                    VerticalAlignment="Top" 
                                    Background="White">
                                    <Button 
                                        Margin="0,0,150,0" 
                                        Background="{x:Null}" 
                                        Foreground="#FF464646">
                                        <StackPanel 
                                            Orientation="Horizontal">
                                            <Rectangle 
                                                Width="16"
                                                Height="16">
                                                <Rectangle.Fill>
                                                    <VisualBrush 
                                                        Stretch="Fill"
                                                        Visual="{iconPacks:FontAwesome PrintSolid}" />
                                                </Rectangle.Fill>
                                            </Rectangle>
                                            <TextBlock 
                                                Text="  Print" />
                                        </StackPanel>
                                    </Button>
                                    <Button 
                                        Margin="139,0,0,0" 
                                        Background="{x:Null}" 
                                        Foreground="#FF464646">
                                        <StackPanel 
                                            Orientation="Horizontal">
                                            <Rectangle 
                                                Width="16"
                                                Height="16">
                                                <Rectangle.Fill>
                                                    <VisualBrush 
                                                        Stretch="Fill"
                                                        Visual="{iconPacks:FontAwesome TimesCircleSolid}" />
                                                </Rectangle.Fill>
                                            </Rectangle>
                                            <TextBlock 
                                                Text="  Remove" />
                                        </StackPanel>
                                    </Button>
                                </Grid>
                            <Label 
                                Content="Searching" 
                                HorizontalAlignment="Left" 
                                Margin="160,10,0,0" 
                                VerticalAlignment="Top" 
                                Width="102" 
                                Height="25" 
                                FontSize="14" 
                                FontFamily="/PMS;component/Assets/Fonts/#Roboto"
                                HorizontalContentAlignment="Right" 
                                Padding="0,5,0,0" 
                                Foreground="White"/>
                        </Grid>
                    </DataTemplate>
                    </ItemsControl.ItemTemplate>
                    <system:String>Item #1</system:String>
                    <system:String>Item #2</system:String>
                    <system:String>Item #3</system:String>
                    <system:String>Item #1</system:String>
                    <system:String>Item #2</system:String>
                    <system:String>Item #3</system:String>
                    <system:String>Item #1</system:String>
                    <system:String>Item #2</system:String>
                    <system:String>Item #3</system:String>
                    <system:String>Item #1</system:String>
                    <system:String>Item #2</system:String>
                    <system:String>Item #3</system:String>
                </ItemsControl>
            </ScrollViewer>
        </DockPanel>
        <SimpleChildWindow:ChildWindow x:Name="CustomChildWindow" Content="ChildWindow" HorizontalAlignment="Left" Height="100" Margin="102,82,0,-105" VerticalAlignment="Top" Width="100"/>
    </Grid>
</UserControl>