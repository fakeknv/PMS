            </ListView>
        </Grid>
        <Grid x:Name="Suggestions4" Visibility="Hidden" Height="87" Margin="61,456,0,0" VerticalAlignment="Top" Background="#FFF0F0F0" HorizontalAlignment="Left" Width="265">
