            <Border x:Name="MinisterBorder" BorderThickness="0,1,1,1" BorderBrush="#FF545454" Grid.Column="11" RenderTransformOrigin="0.5,0.5">
                <TextBlock x:Name="MinisterLabel" Grid.Column="2" MaxWidth="90" TextWrapping="WrapWithOverflow" Text="Minister" VerticalAlignment="Center" Height="Auto" FontFamily="/PMS;component/Assets/Fonts/#Roboto" FontSize="14" Foreground="Black" TextAlignment="Center" Margin="0,0,-1,-2"/>
