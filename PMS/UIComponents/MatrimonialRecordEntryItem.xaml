            <Label x:Name="Status1Label" Content="Status" VerticalAlignment="Top" Height="107" FontFamily="/PMS;component/Assets/Fonts/#Roboto" FontSize="14" Grid.Column="3" Padding="0" HorizontalContentAlignment="Center" BorderBrush="#FF545454" BorderThickness="0,1,1,1" VerticalContentAlignment="Center"/>
            <Label x:Name="Status2Label" Content="Status" FontFamily="/PMS;component/Assets/Fonts/#Roboto" FontSize="14" Grid.Column="3" Padding="0" HorizontalContentAlignment="Center" BorderBrush="#FF545454" BorderThickness="0,0,1,1" VerticalContentAlignment="Center" Margin="0,107,0,0"/>
            <Label x:Name="Age1Label" Content="Age" VerticalAlignment="Top" Height="107" FontFamily="/PMS;component/Assets/Fonts/#Roboto" FontSize="14" Padding="0" HorizontalContentAlignment="Center" BorderThickness="0,1,1,1" BorderBrush="#FF545454" VerticalContentAlignment="Center" Grid.Column="4"/>
