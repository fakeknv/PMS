<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PMS.UIComponents"
             xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
             x:Class="PMS.UIComponents.RequestItem"
             mc:Ignorable="d" Height="163.652" Width="271.936">
    <Grid Background="#FF5B6ED6">
        <iconPacks:PackIconFontAwesome 
            Kind="UserCircleSolid"
            HorizontalAlignment="Left" 
            Margin="51,60,0,0" 
            VerticalAlignment="Top" 
            Height="43" 
            Width="46" Foreground="White"/>
        <Label Content="Baptismal Certificate" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="140" Height="25" FontSize="14" FontFamily="/PMS;component/Assets/Fonts/#Roboto" Foreground="White"/>
        <Label Content="Ricardo Dalisay" HorizontalAlignment="Left" Margin="96,66,0,0" VerticalAlignment="Top" Height="34" Width="149" FontFamily="/PMS;component/Assets/Fonts/#Roboto" FontSize="18" Foreground="White"/>
        <Grid Height="41" Margin="0,123,0,0" VerticalAlignment="Top" Background="White">
            <Button Margin="0,0,150,0" Background="{x:Null}" Foreground="#FF464646">
                <StackPanel Orientation="Horizontal">
                    <Rectangle Width="16"
                        Height="16">
                        <Rectangle.Fill>
                            <VisualBrush Stretch="Fill"
                                Visual="{iconPacks:FontAwesome PrintSolid}" />
                        </Rectangle.Fill>
                    </Rectangle>
                    <TextBlock Text="  Print" />
                </StackPanel>
            </Button>
            <Button Margin="139,0,0,0" Background="{x:Null}" Foreground="#FF464646">
                <StackPanel Orientation="Horizontal">
                    <Rectangle Width="16"
                        Height="16">
                        <Rectangle.Fill>
                            <VisualBrush Stretch="Fill"
                                Visual="{iconPacks:FontAwesome TimesCircleSolid}" />
                        </Rectangle.Fill>
                    </Rectangle>
                    <TextBlock Text="  Remove" />
                </StackPanel>
            </Button>
        </Grid>
        <Label Content="Searching" HorizontalAlignment="Left" Margin="160,10,0,0" VerticalAlignment="Top" Width="102" Height="25" FontSize="14" FontFamily="/PMS;component/Assets/Fonts/#Roboto" HorizontalContentAlignment="Right" Padding="0,5,0,0" Foreground="White"/>

    </Grid>
</UserControl>
