<UserControl 
    x:Class="PMS.UIComponents.BaptismalRecordEntryItem"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
    xmlns:local="clr-namespace:PMS.UIComponents"
    mc:Ignorable="d" 
    HorizontalAlignment="Stretch"
    Height="172" 
    Width="Auto"
    Padding="0,0,0,0">
    <Grid 
        Background="#FFFFF8F8"
        HorizontalAlignment="Stretch">
        <Grid Background="White">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="30"/>
                <ColumnDefinition Width="40"/>
                <ColumnDefinition Width="80"/>
                <ColumnDefinition Width="127*" MinWidth="127"/>
                <ColumnDefinition Width="100*" MinWidth="100"/>
                <ColumnDefinition Width="79*" MinWidth="79"/>
                <ColumnDefinition Width="133"/>
                <ColumnDefinition Width="102*" MinWidth="102" MaxWidth="110"/>
                <ColumnDefinition Width="184*"/>
                <ColumnDefinition Width="49*" MinWidth="49"/>
                <ColumnDefinition Width="191*"/>
            </Grid.ColumnDefinitions>
            <Label x:Name="RegistryNumLabel" Content="No." FontFamily="/PMS;component/Assets/Fonts/#Roboto" FontSize="14" HorizontalContentAlignment="Center" BorderBrush="#FF545454" VerticalContentAlignment="Center" BorderThickness="1"/>
            <Label x:Name="BaptismalYearLabel" Content="Year" FontFamily="/PMS;component/Assets/Fonts/#Roboto" FontSize="14" Grid.Column="1" Padding="0" HorizontalContentAlignment="Center" BorderThickness="0,1,1,1" BorderBrush="#FF545454" VerticalContentAlignment="Center"/>
            <Label x:Name="BaptismalDateLabel" Content="Date" FontFamily="/PMS;component/Assets/Fonts/#Roboto" FontSize="14" Grid.Column="2" Padding="0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" BorderThickness="0,1,1,1" BorderBrush="#FF545454"/>
            <Border x:Name="NameBorder" BorderThickness="0,1,1,1" BorderBrush="#FF545454" Grid.Column="3" RenderTransformOrigin="0.5,0.5">
                <TextBlock x:Name="NameLabel" Grid.Column="2" MaxWidth="125" TextWrapping="WrapWithOverflow" Text="TextBlock" VerticalAlignment="Center" Height="Auto" FontFamily="/PMS;component/Assets/Fonts/#Roboto" FontSize="14" Foreground="Black" TextAlignment="Center" Margin="0,0,-1,-2"/>
            </Border>
            <Border x:Name="DateOfBirthBorder" BorderThickness="0,1,1,1" BorderBrush="#FF545454" Grid.Column="4" RenderTransformOrigin="0.5,0.5">
                <TextBlock x:Name="DateOfBirthLabel" Grid.Column="2"  MaxWidth="130" TextWrapping="WrapWithOverflow" Text="TextBlock" VerticalAlignment="Center" Height="Auto" FontFamily="/PMS;component/Assets/Fonts/#Roboto" FontSize="14" Foreground="Black" TextAlignment="Center" Margin="0,0,-1,-2"/>
            </Border>
            <Label x:Name="LegitimacyLabel" Content="Legitimacy" VerticalAlignment="Top" Height="172" FontFamily="/PMS;component/Assets/Fonts/#Roboto" FontSize="14" Grid.Column="5" Padding="0" HorizontalContentAlignment="Center" BorderThickness="0,1,1,1" BorderBrush="#FF545454" VerticalContentAlignment="Center"/>
            <Label x:Name="StipendLabel" Content="Stipend" VerticalAlignment="Top" Height="172" FontFamily="/PMS;component/Assets/Fonts/#Roboto" FontSize="14" Grid.Column="9" Padding="0" HorizontalContentAlignment="Center" BorderBrush="#FF545454" BorderThickness="0,1,1,1" VerticalContentAlignment="Center"/>
            <Border x:Name="Parent1Border" BorderThickness="0,1,1,1" BorderBrush="#FF545454" Grid.Column="6" RenderTransformOrigin="0.5,0.5" Margin="0,0,0,82">
                <TextBlock x:Name="Parent1Label" Grid.Column="2" MaxWidth="120" TextWrapping="WrapWithOverflow" Text="TextBlock" VerticalAlignment="Center" Height="Auto" FontFamily="/PMS;component/Assets/Fonts/#Roboto" FontSize="14" Foreground="Black" TextAlignment="Center" Margin="0,0,-1,-2"/>
            </Border>
            <Border x:Name="Parent2Border" BorderThickness="0,0,1,1" BorderBrush="#FF545454" Grid.Column="6" RenderTransformOrigin="0.5,0.5" Margin="0,90,0,0">
                <TextBlock x:Name="Parent2Label" Grid.Column="2"  MaxWidth="120" TextWrapping="WrapWithOverflow" VerticalAlignment="Center" Height="Auto" FontFamily="/PMS;component/Assets/Fonts/#Roboto" FontSize="14" Foreground="Black" TextAlignment="Center" Margin="0,0,-1,-2"/>
            </Border>
            <Border x:Name="PlaceOfBirthBorder" BorderThickness="0,1,1,1" BorderBrush="#FF545454" Grid.Column="7" RenderTransformOrigin="0.5,0.5">
                <TextBlock x:Name="PlaceOfBirthLabel" Grid.Column="2" MaxWidth="102" TextWrapping="WrapWithOverflow" Text="TextBlock" VerticalAlignment="Center" Height="Auto" FontFamily="/PMS;component/Assets/Fonts/#Roboto" FontSize="14" Foreground="Black" TextAlignment="Center" Margin="0,0,-1,-2"/>
            </Border>
            <Border x:Name="Godparents1Border" BorderThickness="0,1,1,1" BorderBrush="#FF545454" Grid.Column="8" RenderTransformOrigin="0.5,0.5" Margin="0,0,0,82">
                <TextBlock x:Name="Sponsor1Label" Grid.Column="2" MaxWidth="134" TextWrapping="WrapWithOverflow" Text="TextBlock" VerticalAlignment="Center" Height="Auto" FontFamily="/PMS;component/Assets/Fonts/#Roboto" FontSize="14" Foreground="Black" TextAlignment="Center" Margin="0,0,-1,-2"/>
            </Border>
            <Border x:Name="Godparents2Border" BorderThickness="0,0,1,1" BorderBrush="#FF545454" Grid.Column="8" RenderTransformOrigin="0.5,0.5" Margin="0,90,0,0">
                <TextBlock x:Name="Sponsor2Label" Grid.Column="2" MaxWidth="134" TextWrapping="WrapWithOverflow" VerticalAlignment="Center" Height="Auto" FontFamily="/PMS;component/Assets/Fonts/#Roboto" FontSize="14" Foreground="Black" TextAlignment="Center" Margin="0,0,-1,-2"/>
            </Border>
            <Border x:Name="MinisterBorder" BorderThickness="0,1,1,1" BorderBrush="#FF545454" Grid.Column="10" RenderTransformOrigin="0.5,0.5">
                <TextBlock x:Name="MinisterLabel" Grid.Column="2" MaxWidth="125" TextWrapping="WrapWithOverflow" Text="TextBlock" VerticalAlignment="Center" Height="Auto" FontFamily="/PMS;component/Assets/Fonts/#Roboto" FontSize="14" Foreground="Black" TextAlignment="Center" Margin="0,0,-1,-2"/>
            </Border>
        </Grid>
    </Grid>
</UserControl>